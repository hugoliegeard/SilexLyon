{% extends 'layout.html.twig' %}

{% block title %} Connexion {% endblock %}
{% set active = 'connexion' %}

{% block contenu %}

	<!-- .row>.col-xs-6.col-xs-push-3 -->
	<div class="row">
		<div class="col-xs-6 col-xs-push-3">
			<h2 class="text-center">Connexion</h2>
			
			{% if error %}
				<div class="alert alert-danger">
					<i class="fa fa-exclamation-triangle" aria-hidden="true"></i>
					{{ error | replace({"Bad credentials" : "Identifiants et/ou mot de passe incorrect"}) }}
				</div>
			{% endif %}
			
			{% if global.request.get('inscription') == 'success' %}
				<div class="alert alert-success">
					<p>
						<i class="fa fa-thumbs-up" aria-hidden="true"></i> 
						FÃ©licitation, votre inscription est effective.
						<br />Vous pouvez maintenant vous connecter.
					</p>
				</div>
			{% endif %}
			
			<form action="{{ url('admin_login_check') }}" class="form-horizontal" method="POST">
			
				<!-- Email -->
				<div class="form-group">
					<div class="col-xs-12">
						<input type="email"  placeholder="Saisissez votre Email"
							name="_username" value="{{ last_username }}"
							class="form-control" required />
					</div>
				</div>
				
				<!-- Mot de passe -->
				<div class="form-group">
					<div class="col-xs-12">
						<input type="password" placeholder="*******"
							name="_password"
							class="form-control" required />
					</div>
				</div>
				
				<input type="submit" class="btn btn-block btn-primary"
					value="Connexion"  />
				
			</form>
						
		</div>
	</div>

{% endblock %}



